//========
//TypeDefs
struct PIXEL_INPUT_TYPE
{
	float4 position : SV_POSITION;
	float4 depth_position : TEXTURE0;
};

//===========
//PixelShader
float4 Depth_pixel_shader(PIXEL_INPUT_TYPE input) : SV_TARGET
{
	float4 color;
	float depth_value;
	
	depth_value = input.depth_position.z / 10.0f;
	
	color = float4(depth_value, depth_value, depth_value, 1.0f);
	//sample pixel color from texture
	return color;
};

